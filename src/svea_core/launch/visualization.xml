<launch>

  <!-- Arguments BEGIN -->

    <arg name="name"            default="self"/>
    <arg name="use_sim_time"    default="false"/>

    <!-- Arguments END -->
    
    <group>

        <push-ros-namespace namespace="$(var name)"/>

        <let name="xacro_cmd" value="xacro $(find-pkg-share svea_core)/urdf/svea.urdf.xacro namespace:=$(var name)/"/>

        <!-- robot_state_publisher -->
        <node pkg="robot_state_publisher" exec="robot_state_publisher" output="screen">
            <param name="use_sim_time" value="$(var use_sim_time)" />
            <param name="robot_description" value="$(command '$(var xacro_cmd)')" />
        </node>

    </group>

</launch>
